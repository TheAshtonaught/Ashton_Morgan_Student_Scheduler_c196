<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/assessment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/edit_assessment_button"
            android:text="Mobile Application Development - ABM"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            android:layout_alignParentStart="true"
            android:ellipsize="end"/>


        <ImageButton
            android:id="@+id/edit_assessment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_edit"/>

        <TextView
            android:id="@+id/assessment_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assessment_title"
            android:text="Assessment Type"/>

        <TextView
            android:id="@+id/assessment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/assessment_type_label"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/assessment_title"
            android:text="Objective assessment"/>

        <TextView
            android:id="@+id/assessment_sd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assessment_type_label"
            android:text="Due Date"/>

        <TextView
            android:id="@+id/assessment_due_date"
            android:layout_below="@+id/assessment_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toStartOf="@+id/assessment_sd"
            android:text="10/01/2020"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>