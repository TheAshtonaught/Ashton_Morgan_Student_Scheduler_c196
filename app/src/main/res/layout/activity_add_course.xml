<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddCourseActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edit_text_course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:inputType="text"/>

            <EditText
                android:id="@+id/edit_text_course_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_course_title"
                android:hint="Start Date MM/DD/YYYY"
                android:inputType="text"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/edit_text_course_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_course_start_date"
                android:hint="End Date MM/DD/YYYY"
                android:inputType="text"
                tools:ignore="TextFields"/>

            <EditText
                android:id="@+id/edit_text_course_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_course_end_date"
                android:hint="Status"
                android:inputType="text"/>

            <EditText
                android:id="@+id/edit_text_course_mentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_course_status"
                android:hint="Course mentor info"
                android:inputType="text"
                tools:ignore="TextFields" />

            <Button
                android:id="@+id/add_notes_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_course_mentor"
                android:text="Add Notes"
                android:onClick="addNotes"/>

            <EditText
                android:id="@+id/edit_text_course_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_notes_button"
                android:hint="Notes \n\n\n"
                android:inputType="textMultiLine"
                tools:ignore="TextFields"/>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>








</androidx.coordinatorlayout.widget.CoordinatorLayout>